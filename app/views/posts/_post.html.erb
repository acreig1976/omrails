<div class="box">
	<%= link_to (image_tag post.image(:thumb)), post %>
	<p class="description">
		<%= post.description %>
	</p>
	<p>
		<strong>
			Posted by <%= link_to post.user.name, post.user %>
		</strong>
	</p>
	  <% if current_user == post.user%>
	  <p>
	<%= link_to 'Edit', edit_post_path(post) %>
	<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	  <% end %>
</div>